<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>sys.servlets.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>sys.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>sys.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Forget</servlet-name>
        <servlet-class>sys.servlets.Forget</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostEpidemic</servlet-name>
        <servlet-class>sys.servlets.PostEpidemic</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Settings</servlet-name>
        <servlet-class>sys.servlets.Settings</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>sys.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExpert</servlet-name>
        <servlet-class>sys.servlets.AddExpert</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/backend/SignUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/backend/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/backend/farmer/Logout</url-pattern>
        <url-pattern>/backend/expert/Logout</url-pattern>
        <url-pattern>/backend/admin/Logout</url-pattern>
        <url-pattern>/backend/Logout</url-pattern>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Forget</servlet-name>
        <url-pattern>/backend/Forget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostEpidemic</servlet-name>
        <url-pattern>/backend/farmer/PostEpidemic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Settings</servlet-name>
        <url-pattern>/backend/farmer/Settings</url-pattern>
        <url-pattern>/backend/expert/Settings</url-pattern>
        <url-pattern>/backend/admin/Settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/backend/Search</url-pattern>
        <url-pattern>/backend/farmer/Search</url-pattern>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExpert</servlet-name>
        <url-pattern>/backend/admin/ExpertPage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
